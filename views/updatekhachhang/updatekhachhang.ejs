            <label class="form-label">Email:</label>
            <input name="email" class="form-control" value="{{}}" required />
        </div>
        <div class="mb-3">
            <label class="form-label">SĐT:</label>
            <input name="sdt" class="form-control" value="{{}}" required />
        </div>
     
        <div class="mb-3">
          <label class="form-label">Mật khẩu:</label>
          <input name="pass" class="form-control" value="{{}}" required />
      </div>
            
        <button type="submit" class="btn btn-primary col-auto ms-auto w-100">Add Khách hàng</button>
    </form>


