<body class="m-0 p-0 container-fluid">
    
        <div class="m-4">
            <h1 style=" text-align: center;margin-left:20px">Danh sách khách hàng</h1>
           
            <% if(listStaff) {%>
                <table class="table table-hover table-bordered mt-2" style=" text-align: center">
                    <thead>
                        <tr class="text-center">
                            
                            <th  scope="col">Avatar</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">SDT</th>

                            <th scope="col">PassWord</th>
                            <th></th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        <% listStaff.forEach((item)=> {
                            %>

                            <tr class="align-middle">
                                
                                <td>
                                      <img src="<%= item.Avatar %>" alt="<%= item.Avatar %>">
                                </td>

                                <td>
                                    <%= item.Fullname %>
                                </td>
                                <td scope="row">
                                   <%= item.Email %>
                                </td>
                                <td scope="row">
                                  <%= item.SDT %>
                               </td>
                              
                                
                               
                                
                                <td class="text-center">
                                    
                                    <button data-item-id="<%= item.id %>" 
                                     data-item-avatar="<%= item.Avatar %>" 
                                        data-item-name="<%= item.Fullname %>"
                                        data-item-email="<%= item.Email %>"
                                        data-item-sdt="<%= item.SDT %>"

                                        data-item-pass="<%= item.Password %>" 
                                        
                                        type="button" class="btn btn-success " data-bs-toggle="modal" data-bs-target="#updateModal" >Edit</button>

                                    <button data-item-id="<%= item.id %>" data-item-name="<%= item.name %>"
                                        class="btn btn-danger" data-bs-toggle="modal"
                                        data-bs-target="#deleteModal">Delete</button>
                                </td>
                             
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% }else{ %>
                    <h3>Không có dữ liệu</h3>
                    <% } %>
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="m-0">Showing:10/100 items</p>
                            <nav aria-label="Page navigation example" class="">
                                <ul class="pagination m-0">
                                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                                </ul>
                            </nav>
                        </div>
        </div>
      
       
        
        <!-- Modal Edit-->
        <div class="modal fade" id="updateModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
   <div class="modal-content">
     <div class="modal-header">
         <h1 class="modal-title fs-5" id="updateModalLabel">Update KH</h1>
         <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
     </div>
                    <form id="updateForm" action="/qlyKH/updateKH" method="POST" >

                      <div class="modal-body">
                        <div class="input-group" style="margin-top: 10px;">
                          <label for="avatar" class="input-group-text" >avatar</label>
                          <input name="Avatar"  id="avatar" type="text" aria-label="First name" class="form-control">
                                   </div>
                                    <div class="input-group" style="margin-top: 10px;">
                                    <label for="tenKH" class="input-group-text" >FullName</label>
                                    <input name="Fullname"  id="tenKH" type="text" aria-label="First name" class="form-control">
                                   </div>
        
                                   <div class="input-group" style="margin-top: 10px;">
                                    <label for="email" class="input-group-text" >Email</label>
                                    <input name="Email"  id="emailKH" type="text" aria-label="First name" class="form-control">
                                   </div>
                                   <div class="input-group" style="margin-top: 10px;">
                                    <label for="sdtKH" class="input-group-text" >SDT</label>
                                    <input name="SDT"  id="sdtKH" type="text" aria-label="First name" class="form-control">
                                   </div>
        
                                   <div class="input-group" style="margin-top: 10px;">
                                    <label for="mkKH" class="input-group-text" >Password</label>
                                    <input name="Password"  id="mkKH" type="text" aria-label="First name" class="form-control">
                                   </div>
                          
                      </div>
                      <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                          <button type="submit" class="btn btn-primary">Save</button>
                      </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Modal delete -->
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="deleteModalLabel">Delete KH</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="qlyKH/deleteKH" method="post">
                        <div class="modal-body">
                            Bạn chắc chắn muốn xóa?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                            <button type="submit" class="btn btn-primary">Yes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    

            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
                integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
                crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
                integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS"
                crossorigin="anonymous"></script>
            

            <script>
                const editButtons = document.querySelectorAll('.btn.btn-success');
                const editModal = new bootstrap.Modal(document.getElementById('updateModal'));
                const editForm = document.getElementById('updateForm');

                // Bắt sự kiện khi nút "Edit" được nhấn
                editButtons.forEach(button => {
                    button.addEventListener('click', function () {
                        // Lấy giá trị item_id và item_name từ thuộc tính dữ liệu (data attribute)
                        const itemId = this.getAttribute('data-item-id');

                        const itemAvatar = this.getAttribute('data-item-avatar');
                        const itemName = this.getAttribute('data-item-name');
                        const itemEmail = this.getAttribute('data-item-email');
                        const itemSDT = this.getAttribute('data-item-sdt');

                        const itemPass = this.getAttribute('data-item-pass');
                        
                       
                        // Truy xuất phần tử trong modal để cập nhật nội dung
                        const modalBody = editModal._element.querySelector('.modal-body');
                        const AvatarInput = editForm.querySelector('#avatar');
                       

                        const nameInput = editForm.querySelector('#tenKH');
                        const passInput = editForm.querySelector('#mkKH');
                        const emailInput = editForm.querySelector('#emailKH');
                        const sdtInput = editForm.querySelector('#sdtKH');


                        // Cập nhật nội dung modal và input với item_id và item_name tương ứng
                        nameInput.value = itemName;
                        AvatarInput.value = itemAvatar;
                        sdtInput.value = itemSDT;
                        passInput.value=itemPass;
                        emailInput.value=itemEmail;
                        // Thay đổi giá trị của thuộc tính action của form khi nút "Edit" được nhấn
                        editForm.action = `/qlyKH/updateKH/${itemId}`;
                    });
                });
            </script>


            
            <script>
                const deleteButtons = document.querySelectorAll('.btn.btn-danger');
                const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
                const deleteForm = document.querySelector('form[action="qlyKH/deleteKH"]');

                // Bắt sự kiện khi nút "Delete" được nhấn
                deleteButtons.forEach(button => {
                    button.addEventListener('click', function () {
                        // Lấy giá trị item_id từ thuộc tính dữ liệu (data attribute)
                        const itemId = this.getAttribute('data-item-id');
                        const itemName = this.getAttribute('data-item-name');
                        // Truy xuất phần tử trong modal để cập nhật nội dung
                        const modalBody = deleteModal._element.querySelector('.modal-body');
                        // Cập nhật nội dung modal với item_id tương ứng
                        // modalBody.textContent = `Do you want to delete the product named "${itemName}"?`;

                        // Thay đổi giá trị của thuộc tính action của form khi nút "Delete" được nhấn
                        deleteForm.action = `qlyKH/deleteKH/${itemId}`;
                    });
                });
            </script>

            

   


</body>


</html>